<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context="com.hodiau.timeofyourlife.AboutActivity">

    <TextView
        android:id="@+id/tvTitleAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About This Application"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_marginBottom="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSubtitleAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:text="@string/about_subtitle"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvContentAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/background"
        android:text="@string/about_content" />
</LinearLayout>
